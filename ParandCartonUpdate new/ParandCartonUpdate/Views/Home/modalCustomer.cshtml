<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-dark mt-4" data-bs-toggle="modal"
        data-bs-target="#CustomerModal" onclick="BindCustomer()">
    نمایش مشتری
</button>



<!-- Modal -->
<div class="modal fade" id="CustomerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">مشتریان</h1>
<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
            <div class="modal-body">

                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive table-responsive-md " style="font-size: 12px !important">
                                <table id="customerTable" class="table table-striped table-bordered" width="100%">
                                    <thead class="text-center">
                                        <tr>
                                            <th class="text-center">ردیف</th>
                                            <th class="text-center">کد مشتری</th>
                                            <th class="text-center">نام و نام خانوادگی</th>
                                            <th class="text-center"></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td id="code1">0001</td>
                                            <td id="name1">ثمین مقربی</td>
                                            <td><button class="btn btn-success" onclick="selectcustomer(1)">انتخاب</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix text-black"></div>
                    <br />
                    <button type="button" id="btnShowCustomerDiv" class="btn btn-primary" >افزودن مشتری</button>
                </div>

                <div style="visibility: hidden" id="divInsertCustomer">
                    <h1>hi .....</h1>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function BindCustomer() {
        $('#customerTable').DataTable({
            'scrollY': '300px',
            'ordering': false,
            'scrollCollapse': true,
            'paging': false,
            'searching': false,
            'info': false,
            'lengthChange': false,
            'destroy': true,
            'ajax': {
                type: "POST",
                url: '@Url.Action("BindCustomer","Home")',
                data: {},
                contentType: "application/json;charset=utf-8",
                dataType: "json",

                columns: [
                    { "data": "ردیف" },
                    { "data": "کد مشتری" },
                    { "data": "نام مشتری" }
                ],
                success: function (data) {
                    $("#customerTable tbody").find('tr').remove();
                    if (data.length > 0) {
                        for (var i = 0; i < data.length; i++) {
                            var a = i + 1;
                            $("#customerTable tbody")
                                .append("<tr><td class='text-center'>" +
                                    a +
                                    "</td><td class='text-center'>" +
                                    data[i][1] +
                                    "</td><td class='text-center'>" +
                                    data[i][2] +
                                    "</td><td class='text-center'>" +
                                    "<ul class='nav navbar - nav' style='margin - right: 5 %;' >" +
                                    "<li><a href='#' data-placement='top' data-toggle='tooltip' title='انتخاب' onclick='SelectCustomer(" + data[i][0] + ");' data-bs-dismiss='modal'>" +
                                    "انتخاب</a></li>" +
                                    "</ul>" +
                                    "</td> </tr > "

                                );
                        }
                    }
                },
                error: function (result) {
                }
            }

        });

    }
    function SelectCustomer(id) {
        $.ajax({
            type: "POST",
            url: '@Url.Action("SelectCustomer","Home")',
            data: '{id:"' + id + '"}',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (data) {
                if (data !== '') {
                    var key = data;
                    $(key).each(function () {

                        $("#txtCustomerCode").val(data[0]);
                        $("#txtCustomerName").val(data[1]);

                    });
                }
            },
            error: function (response) {
                alert(response);
            }
        });
    }
</script>
